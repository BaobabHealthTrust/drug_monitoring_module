<script type="text/javascript">

    function publicationMenu()
    {
        var path = ["/publication/new", "/publication/edit"];
        var icons = ['view_doc.png','publications.png'];
        var title = ['Add Publication', 'Edit Publication'];
        loadMenu(title,icons,path);
    }

    function userMenu()
    {
        var path = ["/user/create", "/user/edit"];
        var icons = ['add_user.png','edit_user.png'];
        var title = ["Add User", "Edit User"];
        loadMenu(title,icons,path);
    }

    function siteMenu()
    {
        var path = [];
        var icons = [];
        var title = [];
        loadMenu(title,icons,path);
    }

    function loadMenu(fields, images,paths){
        document.getElementById("panel").innerHTML = "";

        for(var i = 0; i < fields.length; i++){

            var div = document.createElement("div");
            div.style.width = "200px";
            div.style.height = "160px";
            div.style.textAlign = "center";
            div.style.cssFloat = "left";
            div.style.padding = "5px";
            div.style.opacity = "1";
            div.style.cursor = "pointer";
            div.setAttribute("link", paths[i]);
            div.className = "menu_button blue";

            div.onclick = function(){
                window.location = this.getAttribute("link");
            }

            document.getElementById("panel").appendChild(div);

            var img = document.createElement("img");
            img.src = "/images/" + images[i];
            img.setAttribute("alt", fields[i]);
            img.height = "90";
            img.style.margin = "5px";

            div.appendChild(img);

            div.innerHTML += "<div style='padding: 5px; margin-top: 10px;'>" + fields[i] + "</div>";

        }
    }

    setTimeout("publicationMenu()", 200);
</script>
<style type="text/css">
  td{
      text-align: center;
  }
  td:hover{
    background-color: blue;
  }
</style>
<div style="width: 100%;height: 100%;">

  <div style="width: 15%; text-align: center;" class="divider">
      <table width="100%" cellspacing="0px" cellpadding="5px" style="margin-top: 5px;">
        <tr>
          <td>
            <img class="icons" onmousedown="publicationMenu()" src="/images/publications.png" alt="">
          </td>
        </tr>
        <tr>
          <td>
            <img class="icons" onmousedown="siteMenu()" src="/images/Hospital-icon.png" alt="">
          </td>
        </tr>
        <tr>
          <td>
            <img class="icons" onmousedown="userMenu()" src="/images/user_management_icon.png" alt="">
          </td>
        </tr>
      </table>
  </div>

  <div id="panel" style="width:84%;float:right; " class="divider">


  </div>
</div>