    function line_graph()
    {
        try{

            var chart = new Highcharts.Chart({
                chart: {
                    renderTo: 'graph'
                },

                xAxis: {
                    type:'datetime',
                    dateTimeLabelFormats: { // don't display the dummy year
                        month: '%e. %b',
                        year: '%b'
                    },
                    title : {
                        text:"Days"
                    }
                },
                yAxis: {
