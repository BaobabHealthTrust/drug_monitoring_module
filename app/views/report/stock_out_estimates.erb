<script>
  var drug_map = {}
<%@drug_map.each do |map|%>
    drug_map["<%= map[0]%>"] = "<%= map[1] %>"
<%end

@d_map = @drug_map.inject({}){|h, arr|next if arr.blank?;  h[arr[0]] = arr[1]; h}
%>
</script>

<div class="stock-data">

  <table  class="fullpage header" width="100" cellspacing="5px" cellpadding="10px">

    <tr>

      <td style="padding-left: 5%; font-size: 20px;"><span style="color: lightblue;font-weight: bold;">Display results for :</span>
        <%if params[:name] == "months_of_stock"%>
          <select id="sites" style="margin-left: 3%; width: <%= (@stocks.blank? ? "25%" : "50%")%>; font-size: 20px;" name="site_name"
                  onchange="loadSiteChart(this.value, 0, 9)">
                    <% (@sites || []).each do |site| %>
              <option><%= site %></option>
            <% end %>
          </select>
        <%else%>
          <select id="sites" style="margin-left: 3%; width: <%= (@stocks.blank? ? "25%" : "50%")%>; font-size: 20px;" name="site_name"
                  onchange="loadSiteChart(this.value, 0, 9)">
                    <% (@drugs || []).each do |dg| %>
              <option value="<%= dg%>"><%= @d_map[dg] %></option>
            <% end %>
          </select>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<span style="color: lightblue; font-size: 16px;"><%=  params[:start_date].to_date.strftime("%d-%b-%Y") %></span>
          <span style="color: rosybrown; font-size: 14px"> To </ span>
            <span style="color: lightblue; font-size: 16px;"><%=   params[:end_date].to_date.strftime("%d-%b- %Y") rescue ("") %></span>
          <%end%>
      </td>
      <td>&nbsp</td>
      <td id ="date" style="padding-left: 0px; color: lightblue; font-weight: bold;">&nbsp</td>

    </tr>
    <%  unless @stocks.blank? %>
      <tr>
        <th style="width: 37%">Drug </th>
        <th style="width: 13%">Total Prescribed</th>
        <th style="width: 13%">Total Dispensed</th>
        <th style="width: 13%">Consumption rate <br /><sub style="font-size: 12px;">( per day)</sub></th>
        <th style="width: 13%">Stock level<br /><sub style="font-size: 12px;">( pills)</sub></th>
        <th>Stockout date <br /><sub style="font-size: 12px;">( estimated)</sub></th>
      </tr>
      <tr>
        <td colspan="6">
          <div id ="data-holder" style="height: 535px; overflow: auto;">
            <table id ="datalist"  style="width: 100%;" width="100" cellspacing="4px" cellpadding="10px">

            </table>
          </div>
        </td>
      </tr>

    </table>
  <%else%>
    <tr>
      <td id="chart" style="width: 100%; height: 585px;">
        &nbsp;
      </td>

    </tr>
  <%end%>

</div>

